---
	import { ClientRouter } from 'astro:transitions';
	import Header from '../components/Header.astro';
	import '@fontsource-variable/quicksand'
	import '../styles/global.css';

	const { title, watermark } = Astro.props
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ClientRouter />
	</head>
	<body>
		<div class="absolute bottom-0 -z-10 left-0 right-0 top-0 bg-[linear-gradient(to_right,#4f4f4f2e_0.5px,transparent_1px),linear-gradient(to_bottom,#4f4f4f2e_0.5px,transparent_1px)] bg-[size:6rem_6rem]"></div>
		<div class="absolute inset-0 -z-20 h-full w-full items-center px-5 py-24 [background:radial-gradient(125%_125%_at_50%_10%,#030712_40%,#0B3B1A_100%)]"></div>
		<div class="absolute -bottom-16 z-10 -left-3 text-[180px] font-thin text-[#9e9e9c]/5 select-none font-serif ">{watermark}</div>
		<Header />
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		scroll-behavior: smooth;
		color-scheme: light dark;
		font-family: 'Quicksand Variable', sans-serif;
	}
</style>
