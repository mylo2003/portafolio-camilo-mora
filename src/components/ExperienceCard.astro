---
const { experience } = Astro.props;
const { title, description, image, github, link, responsabilities, date, techs } = experience;
---

<li class="mb-20 ms-4">
  <div class="absolute w-3 h-3 rounded-full mt-1.5 -start-1.5 border border-gray-900 bg-gray-700"></div>
  <time class="mb-1 text-xs md:text-sm font-normal leading-none opacity-50">{date}</time>
  <h3 class="text-sm md:text-lg font-semibold mb-2">{title}</h3>
  <p class="mb-4 text-sm md:text-base font-normal opacity-80">
    {description}
  </p>
  <h3 class="font-semibold text-white text-sm md:text-base mb-2">Responsabilidades</h3>
  <ul class="font-normal text-xs md:text-base text-gray-400 list-disc list-inside">
    {
      responsabilities.map((responsability) => (
        <li>
          {responsability}
        </li>
      ))
    }
  </ul>
  <div class="flex flex-wrap mt-2">
    {
      techs.map((tech) => (
        <span class="inline-flex items-center px-2 py-1 text-xs font-medium rounded-full bg-gray-700 text-gray-300 me-2 mb-2">
          {tech.replace("Icon", "")}
        </span>
      ))
    }
  </div>
</li>
