---
const { experience } = Astro.props;
const { title, description, image, github, link, responsabilities, date, techs } = experience;
---

<li class="ms-4">
  <div class="absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white dark:border-gray-900 dark:bg-gray-700"></div>
  <time class="mb-1 text-sm font-normal leading-none text-gray-400 dark:text-gray-500">{date}</time>
  <h3 class="text-lg font-semibold text-gray-900 dark:text-white">{title}</h3><br />
  <p class="text-base font-normal text-gray-500 dark:text-gray-400">{description}</p><br />
  <h3 class="font-semibold text-white mb-2">Responsabilidades</h3>
  <ul class="list-disc list-inside">
    {
      responsabilities.map((responsability) => (
        <li class="text-base font-normal text-gray-500 dark:text-gray-400">
          {responsability}
        </li>
      ))
    }
  </ul>
  <div class="flex flex-wrap mt-2">
    {
      techs.map((tech) => (
        <span class="inline-flex items-center px-2 py-1 text-xs font-medium text-gray-800 bg-gray-200 rounded-full dark:bg-gray-700 dark:text-gray-300 me-2 mb-2">
          {tech.replace("Icon", "")}
        </span>
      ))
    }
  </div>
</li>
