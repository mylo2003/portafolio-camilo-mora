---
import Container from "../components/Container.astro";
import Socials from "../components/Socials.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Contacto | Camilo Mora" watermark="Contacto" currentPath="/contact">
  <Container>
    <section class="flex flex-col items-center mt-20">
      <h2 class="text-3xl md:text-4xl mb-4 text-center text-pretty"> Vamos a trabajar juntos, estoy abierto a nuevas
        <span class="font-semibold opacity-100">oportunidades</span>.
      </h2>
      <span class="text-lg md:text-xl mb-8 opacity-70">
       Ponte en contacto conmigo.
      </span>
      <a
        class="button-style !text-lg md:!text-xl !px-4"
        href="mailto:camiloalf23@gmail.com"
        rel="noopener noreferrer"
        href="mailto:camiloalf23@gmail.com"
        aria-label="Enviar un correo electrónico a Camilo Mora"
        title="Enviar un correo electrónico a Camilo Mora">Envíame un correo</a
      >
      <Socials class="text-center opacity-60 mt-10" />
      <p class="md:text-lg opacity-60">camiloalf23@gmail.com</p>
    </section>
  </Container>
</Layout>
